	BLSURFPlugin_images.po \
	BLSURFPlugin_msg_en.po

# Libraries targets
LIB = libBLSURFPluginGUI.la

LIB_SRC = \
	BLSURFPluginGUI.cxx \
	BLSURFPluginGUI_HypothesisCreator.cxx

