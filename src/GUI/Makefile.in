	SALOME_Exception.idl \
	SALOME_GenericObj.idl \
	SALOME_Component.idl \
	SALOME_Comm.idl \
	GEOM_Gen.idl \
	MED.idl \
	SMESH_Gen.idl \
	SMESH_Mesh.idl \
	SMESH_Group.idl \
	BLSURFPlugin_Algorithm.idl

